        {
          "field_id": "a_diagnosis_of_malignant_phyllodes_tumor_requires_the_presence_of_all_five_of_the_following_features",
          "label": "A diagnosis of malignant phyllodes tumor requires the presence of all five of the following features: marked stromal cellularity, marked stromal atypia, stromal overgrowth, an infiltrative tumor border and greater than or equal to 10 mitoses per 10 high power fields (HPFs). Tumors should be classified as borderline when some but not all of these changes are present. Malignant phyllodes tumor is also diagnosed when malignant heterologous elements other than pure well differentiated liposarcoma are present, even if not all of the other histologic features of malignancy are observed.",
          "required": true,
          "type": "single_select",
          "options": [
            {
              "value": "phyllodes_tumor_benign",
              "label": "Phyllodes tumor, benign"
            },
            {
              "value": "phyllodes_tumor_borderline",
              "label": "Phyllodes tumor, borderline"
            },
            {
              "value": "phyllodes_tumor_malignant",
              "label": "Phyllodes tumor, malignant"
            }
          ]
        },
