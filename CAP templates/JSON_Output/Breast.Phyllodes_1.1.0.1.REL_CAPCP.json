          "label": "Stromal Cellularity",
          "required": true,
          "type": "single_select",
          "options": [
            {
              "value": "mild",
              "label": "Mild (stromal nuclei are non-overlapping)"
            },
            {
              "value": "moderate",
              "label": "Moderate (some overlapping stromal nuclei)"
            },
            {
              "value": "marked",
              "label": "Marked (many overlapping stromal nuclei)"
            }
          ],
          "notes": [
            "B"
          ]
        },
